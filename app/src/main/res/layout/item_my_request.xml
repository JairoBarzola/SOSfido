<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ln_rq_adp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_rq_adp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dog"
            app:civ_border_width="3dp"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/colorAdoption"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_toRightOf="@+id/image_rq_adp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_rq_adp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textList"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_rq_adp"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete_rq"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/delete"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>
    <View
        android:layout_marginLeft="76dp"
        style="@style/Divider">
    </View>

</LinearLayout>